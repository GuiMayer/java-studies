<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<VBox alignment="TOP_CENTER" spacing="10.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.12" fx:controller="com.example.atividadeavaliativa3010.EditarProdutoController">
  <padding>
    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
  </padding>
  <Label style="-fx-font-weight: bold; -fx-font-size: 32">Editar produto</Label>

  <HBox>
    <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
    <VBox>
      <Label>Código do produto</Label>
      <TextField stylesheets="@style.css" fx:id="codigoProdutoTextField"/>
      <Label fx:id="feedbackCodigoProdutoLabel"/>
    </VBox>
  </HBox>
  <HBox spacing="10.0">
    <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
    <VBox>
      <Label>Nome do produto</Label>
      <TextField stylesheets="@style.css" />
    </VBox>
    <VBox>
      <Label>Preço do produto</Label>
      <TextField stylesheets="@style.css" />
    </VBox>
    <VBox>
      <Label>Quantidade do produto</Label>
      <TextField stylesheets="@style.css" />
    </VBox>
  </HBox>

  <Button onAction="#OnEditarProdutoActionButton" stylesheets="@style.css" text="Editar produto" />
</VBox>
