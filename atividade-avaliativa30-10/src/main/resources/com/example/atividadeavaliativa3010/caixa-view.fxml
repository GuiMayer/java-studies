<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TextArea?>
<VBox alignment="TOP_CENTER" spacing="10.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.atividadeavaliativa3010.CaixaController">

  <Label style="-fx-font-weight: bold; -fx-font-size: 32">Caixa de supermercado</Label>

  <HBox alignment="TOP_CENTER" spacing="10.0">
    <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
    <VBox>
      <Label>
        Código
      </Label>
      <TextField stylesheets="@style.css"/>
    </VBox>
    <VBox>
      <Label>
        Quantidade
      </Label>
      <TextField stylesheets="@style.css"/>
    </VBox>
  </HBox>

  <Label>Desodorante - R$20.00</Label>

  <Button text="Adicionar à lista" onAction="#OnAdicionarAListaActionButton" stylesheets="@style.css"/>

  <Label>Lista de produtos</Label>

  <TextArea wrapText="true" editable="false" maxWidth="350"/>

  <Button text="Excluir" onAction="#OnExcluirActionButton" stylesheets="@style.css"/>

  <HBox alignment="TOP_CENTER" spacing="20.0">
    <VBox>
      <Label>Total:</Label>
      <Label style="-fx-font-weight: bold">R$19.95</Label>
    </VBox>
    <VBox>
      <Label>Valor pago:</Label>
      <TextField stylesheets="@style.css" style="-fx-pref-width: 70"/>
    </VBox>
    <VBox>
      <Label>Troco:</Label>
      <Label style="-fx-font-weight: bold">R$19.95</Label>
    </VBox>
  </HBox>

</VBox>
